<div class="container">
  현재 유저의 이메일 : <%= current_user.email %> 
  <hr>
  <a href="/board/new">글 쓰러 가기</a>
  <% @post.each do |post| %>
    <p> 제목: <%= post.title %> </p>
    <p> 내용: <%= post.content %> </p>
    <p> 작성시간: <%= post.created_at %> </p>
    <a href="/board/edit_view/<%= post.id %>">수정</a>
    <a href="/board/destroy/<%= post.id %>" id="delete">삭제</a>
    <% post.comments.each do |c| %>
      <%= c.content %>
      <span class="ml-auto">
        <a href="/board/update_reply/<%= c.id %>"><i class="text-success fa fa-pencil" aria-hidden="true"></i></a>
        <a href="/board/destroy_reply/<%= c.id %>"><i class="text-success fa fa-trash-o" aria-hidden="true"></i></a>
      </span>
    <% end %>
    <% if user_signed_in? %>
      <form action="/board/<%= post.id %>/comment_create" method="POST">
        <div class="form-group">
        <input type="text" name="content" class="form-control" placeholder="댓글">
        </div>
        <button type="submit" class="btn btn-default">댓글달기</button>
      </form>
    <% end %>
    <hr/>
  <% end %>

  <a href="/users/sign_out">로그아웃</a>
</div>
